<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blachardspace.appregistro.frmDetalle">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DETALLE DE REGISTRO"
                    android:id="@+id/lblTitulo"
                    android:textColor="#120971"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:paddingBottom="20dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@mipmap/pictureprofile" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Nombre: Juan"
                    android:id="@+id/lblNombres"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Apellido: Perez"
                    android:id="@+id/lblApellidos"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Email: jperez@gmail.com"
                    android:id="@+id/lblCorreo"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Telefono: 2222-3344"
                    android:id="@+id/lblTelefono"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="5dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="De donde fue el arbolito media cuadra arriba"
                    android:id="@+id/lblDireccion"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:padding="5dp" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
