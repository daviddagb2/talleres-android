<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.blachardspace.appregistro.frmRegistro">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FORMULARIO DE REGISTRO"
                android:id="@+id/lblTitulo"
                android:textColor="#120971"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Digite su nombre:"
                android:id="@+id/textView"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txtNombre"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Digite su Apellido:"
                android:id="@+id/lblapellido"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/txtApellido"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Digite su Correo:"
                android:id="@+id/lblcorreo"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txtCorreo" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Digite su Telefono:"
                android:id="@+id/lblTelefono"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="5dp" />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/txtTelefono" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Digite su DirecciÃ³n:"
                android:id="@+id/lbldireccion"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:padding="5dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/txtDireccion"
                android:layout_alignBottom="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar registro"
                android:id="@+id/btnEnviar" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
